<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.babybico.relayr" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon_babybico"
        android:label="@string/app_name"
        android:theme="@style/Theme.Bb"
        android:name="com.babybico.relayr.BabyBicoApplication">
        <activity
            android:name="com.babybico.relayr.StartPictureActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.babybico.relayr.LowTemperatureActivity"
            android:icon="@drawable/low_temp_s"
            android:label="@string/title_low_temperature"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.babybico.relayr.HighTemperatureActivity"
            android:icon="@drawable/high_temp_s"
            android:label="@string/title_high_temperature"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.babybico.relayr.AwakeActivity"
            android:icon="@drawable/awake_s"
            android:label="@string/title_awake"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.babybico.relayr.SleepingActivity"
            android:icon="@drawable/sleeping_s"
            android:label="@string/title_sleeping"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.babybico.relayr.SoundActivity"
            android:icon="@drawable/sound_s"
            android:label="@string/title_sound"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.babybico.relayr.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"  />
    </application>

</manifest>
